# Environment Configuration
# Copy this file to .env and adjust values as needed

# Balance Service Configuration
# Set to "true" to use mocked balances for development
# Set to "false" to use real RPC calls to fetch balances
EXPO_PUBLIC_USE_MOCK_BALANCES=true

# RPC Configuration (optional, uses defaults if not set)
# EXPO_PUBLIC_RSK_MAINNET_RPC=https://public-node.rsk.co
# EXPO_PUBLIC_RSK_TESTNET_RPC=https://public-node.testnet.rsk.co

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Backend Configuration
EXPO_PUBLIC_AUTH_BACKEND_URL=https://us-central1-parallel-society.cloudfunctions.net